{
    "name": "getpop/application",
    "type": "library",
    "description": "Create a component-based application",
    "keywords": [
        "PoP",
        "application"
    ],
    "homepage": "https://github.com/getpop/application",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php" : "~7.1",
        "getpop/component-model-configuration": "dev-master",
        "getpop/api": "dev-master",
        "getpop/definitions-emoji": "~0.1",
        "getpop/definitionpersistence": "dev-master"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=9.2",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\Application\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\Application\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
